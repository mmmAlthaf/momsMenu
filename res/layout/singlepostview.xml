                        <!--android:background="@drawable/btncornerpost"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Share it!"/>-->

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>